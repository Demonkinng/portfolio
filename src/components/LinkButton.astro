---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className = "" } = Astro.props;
---

<a
  target="_blank"
  href={href}
  role="link"
  rel="noopener noreferrer"
  class={`inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-lg border border-cyan-400/40 bg-cyan-500/10 px-4 py-2 text-sm font-semibold text-cyan-50 transition hover:-translate-y-0.5 hover:border-cyan-300 hover:bg-cyan-500/20 focus:outline-none focus-visible:ring focus-visible:ring-cyan-300/70 focus-visible:ring-offset-2 focus-visible:ring-offset-black active:translate-y-0 ${className}`}
>
  <slot />
</a>
